<?xml version="1.0"?>
<template
    format="4"
    revision="1"
    name="List Fragment"
    description="Kotlin MVP List Fragment">

    <category value="Kotlin Dagger2 MVP" />

    <parameter
        id="moduleName"
        name="Module Name"
        type="string"
        constraints="class|nonempty"
        default="BlankList"
        help="The name of the module to create" />

    <parameter
        id="subPackage"
        name="Sub package"
        type="string"
        constraints="nonempty"
        default="blank"
        suggest="${moduleName?lower_case}"
        help="Module's sub package" />

    <parameter
        id="customLayout"
        name="Generate custom layout XML"
        type="boolean"
        default="false"
        help="Generate a layout XML for the module or use default (layoyt_recycler_view.xml)" />        

    <parameter
        id="layoutName"
        name="Module Layout Name"
        type="string"
        constraints="layout|nonempty|unique"
        default="activity_blank"
        visibility="customLayout"
        suggest="fragment_${classToResource(moduleName)}"
        help="The name of the view layout to create" />
    
    <parameter
        id="modelName"
        name="Model Name"
        type="string"
        constraints="class|nonempty"
        help="The name of the used Model Class" />
    
    <parameter
        id="itemLayoutName"
        name="Item Layout Name"
        type="string"
        constraints="layout|nonempty|unique"
        default="item_blank"
        suggest="item_${classToResource(modelName)}"
        help="The name of the item layout to create" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
